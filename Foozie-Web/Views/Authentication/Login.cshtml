@model Foozie_Web.Models.USER

@{
    ViewBag.Title = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" type="image/x-icon" href="~/Images/logo.ico" />
    <title>Foozie - Đặt đồ ăn trực tuyến</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>


    @Styles.Render("~/Content/css")
</head>




<body class="bg-dark bg-opacity-75">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
    <div class="container-fluid card text-white bg-dark w-25 m-auto mt-5 p-5">
        <img src="~/Images/logo.png" />
        <div class="form-group">
            @Html.LabelFor(m => m.username, "Tên đăng nhập")
            @Html.TextBoxFor(m => m.username, "", new { @class = "form-control" })

        </div>
        <div class="form-group mt-3">
            @Html.LabelFor(m => m.password, "Mật khẩu")
            @Html.PasswordFor(m => m.password, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10 mt-3">
                <input type="submit" value="Đăng nhập" class="btn btn-primary" />
            </div>
        </div>
        <a href="./Create" class="text-decoration-none mt-3">Đăng ký tài khoản</a>
        @if (ViewBag.error != null)
        {
            <span class="badge bg-danger mt-3">@ViewBag.error</span>
        }
    </div>
    }
</body>
</html>

